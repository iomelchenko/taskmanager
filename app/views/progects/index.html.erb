<h1>Simple TODO List</h1>

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th></th>
    <th>Name</th>

  </tr>

<% @progects.each do |progect| %>
  <tr>
    <th><i class="icon-plus"></i></th>
    <td><%= progect.name %></td>

        <% progect.tasks.each do |t| %>
             <%= render partial: 'task', locals: { t: t } %>
         <% end %>


    <td><%= link_to 'Edit', edit_progect_path(progect) %></td>
    <td><%= link_to 'Destroy', progect, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Progect', new_progect_path %>
